<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyHlsPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#5a98ec</item>
        <item name="colorPrimaryVariant">#457dca</item>
        <item name="colorOnPrimary">#5a98ec</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#5a98ec</item>
        <item name="colorSecondaryVariant">#5a98ec</item>
        <item name="colorOnSecondary">#5a98ec</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyHlsPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyHlsPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyHlsPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>